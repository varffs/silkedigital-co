@import "sanitize"
@import "helpers"

// FLUID COLS
.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// VARIABLES

$gutter = 20px
$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-large = ($gutter * 5)

$font-size-basic = 18px
$font-leading-basic = 1.4em
$font-leading-header = 1.5em
$font-tracking-basic = 0.001em

$width-max-copy = 680px

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

$color-yellow = rgb(255, 255, 0)

// TYPOGRAPHY

body
  font-family: helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em
  line-height: $font-leading-header
  margin-bottom: .5em

h2
  font-size: 2em
  line-height: $font-leading-header
  margin-bottom: .5em

h3
  font-size: 1.3em
  line-height: $font-leading-basic
  margin-bottom: .8em

p
  margin-bottom: .5em
  max-width: $width-max-copy
  a
    border-bottom: 2px solid $color-yellow
    &:hover
      border-bottom-color: black

blockquote
  font-style: italic
  font-size: 1.2em
  line-height: $font-leading-header
  margin: $margin-basic


.font-bold
  font-weight: bold

.font-large
  font-size: 1.3em

ul
  font-size: 1.3em
  line-height: 1.6
  margin-left: 1em

li
  list-style: initial

// LINKS
a,a:active,a:visited
  color:inherit
  text-decoration: none
  color: black
  transition:border 1s

a:hover
  color: black

.link-underline
  border-bottom: 2px solid $color-yellow
  &:hover
    border-bottom-color: black


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

.container
  width: 65%
  min-width: 310px
  max-width: 1100px
  margin: 0 auto

img, svg
  max-width: 100%
  height: auto

video
  width: 100%

.yellow-background
  background-color: $color-yellow

.center-spaced
  padding-top: 20vh
  padding-bottom: 20vh

.center-text
  max-width: $width-max-copy
  margin: 0 auto
  box-sizing: border-box
  padding: $margin-basic

// HOME

  // SPLASH

#splash
  height: 99vh

#splash-logo
  svg
    height: 30vh
    width: auto

  // MENU

#menu-holder
  width: 100%
  top: 0
  z-index: 999
  border-bottom: 2px solid $color-white-soft

#menu
  min-width: 310px
  padding: $margin-tiny

#menu-logo
  display: inline-block
  margin-right: $margin-basic
  svg
    height: 2em
    width: auto

#menu-list
  margin: 0
  display: inline-block
  vertical-align: text-top
  li
    display: inline-block
    margin-right: $margin-small


// US

#us-copy
  font-size: 1.6em
  line-height: $font-leading-basic
  max-width: ($width-max-copy * 1.3)
  p
    max-width: ($width-max-copy * 1.3)


// WORK

.home-key-fact
  display: inline-block
  border: solid 1px $color-black-soft
  box-sizing: border-box
  padding: $margin-small
  text-align: center
  width: 80%

.find-out-more-solo
  width: ( 100% / 3 )
  margin-left: ( ( 100% / 3 ) * 2 )

.find-out-more
  border: solid 1px transparent
  &:hover
    border: solid 1px $color-yellow

// CONTACT

#contact
  padding-top: $margin-basic

  // FORM

form
  padding-bottom: $margin-basic

.form-field
  margin-bottom: $margin-basic

label, input, textarea
  margin: $margin-small auto
  min-width: 320px

label
  width: 80%
  display: block
  text-align: left

input, textarea
  width: 75%
  background-color: $color-white-soft
  display: block
  padding: $margin-small
  box-sizing: border-box

input[type=submit]
  width: auto
  padding: $margin-small
  background-color: $color-white-soft


